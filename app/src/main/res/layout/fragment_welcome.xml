<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluee"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WelcomeFragment">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silent"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/topimage"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moon"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout1"
        android:text="Hi Terry, Welcome"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        android:text=" to Silent Moon"
        android:textSize="30sp"
        android:textColor="@color/yellow"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        android:text="Explore the app, Find some peace of mind to             prepare for meditation."
        android:textSize="16sp"
        android:textColor="@color/yellow"
        android:gravity="center_horizontal"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bluee"
        app:layout_constraintTop_toBottomOf="@+id/text3">

        <!-- LinearLayout to hold two images vertically -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="">

            <!-- First ImageView -->
            <ImageView
                android:id="@+id/image1"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/cloud1"
                />

            <!-- Second ImageView -->
            <ImageView
                android:id="@+id/image2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/cloud2"
                 />
            <ImageView
                android:id="@+id/image3"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/cloud3"
                 />
        </LinearLayout>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>