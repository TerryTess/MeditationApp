<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blacker"
    android:padding="20dp"
    tools:context=".fragments.FragmentMain">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:src="@drawable/menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/flowerImage"
            android:layout_width="43dp"
            android:layout_height="49dp"
            android:src="@drawable/flower"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/menuImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/careddd"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/constraint1"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="24dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/img22" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/ttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Relax Sounds"
                    android:textSize="27sp"
                    android:textColor="@color/white"
                    android:gravity="start" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sometimes the most productive \n thing you can do is relax."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:gravity="start"
                    android:layout_marginTop="5dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/white"
                    android:text="Watch Now"
                    android:textColor="@color/black"
                    android:drawableEnd="@drawable/play_arrow"
                    />
            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/careddd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
